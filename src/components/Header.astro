---
import HeaderLink from "./HeaderLink.astro";
import logoHeader from "../assets/logo.webp";
---

<script is:inline>
  function toggleMenu() {
    const menu = document.querySelector("#mobile-menu");
    const isOpen = !menu?.classList.contains("hidden");
    if (isOpen) {
      menu?.classList.add("hidden");
      menu?.classList.remove("flex");
    } else {
      menu?.classList.remove("hidden");
      menu?.classList.add("flex");
    }
  }

  function closeMenu() {
    const menu = document.querySelector("#mobile-menu");
    menu?.classList.add("hidden");
    menu?.classList.remove("flex");
  }

  window.addEventListener("scroll", () => {
    const header = document.querySelector("header");
    if (window.scrollY > 0) {
      header?.classList.add("shadow-md");
    } else {
      header?.classList.remove("shadow-md");
    }
  });
</script>

<header class="fixed inset-x-0 top-0 z-50 bg-white">
  <nav class="mx-auto max-w-7xl flex items-center justify-between px-4 lg:px-8" aria-label="Global">
    <div class="flex lg:flex-1">
      <a href="/" class="-m-1.5 p-1.5">
        <span class="sr-only">Tu empresa</span>
        <img class="h-20 w-auto" src={logoHeader.src} alt="Logo principal de la empresa" />
      </a>
    </div>

    <div class="flex lg:hidden">
      <button
        type="button"
        class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700"
        aria-label="Abrir menú principal"
        onclick="toggleMenu()"
      >
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>

    <div class="hidden lg:flex lg:gap-x-12">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/servicios">Servicios</HeaderLink>
      <HeaderLink href="/porqueeleguirnos">¿Por qué elegirnos?</HeaderLink>
      <HeaderLink href="/contacto">Contacto</HeaderLink>
    </div>
  </nav>

  <div
    id="mobile-menu"
    class="hidden fixed inset-0 z-40 flex-col bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10"
  >
    <div class="flex items-center justify-between">
      <a href="/" class="-m-1.5 p-1.5">
        <span class="sr-only">Tu empresa</span>
        <img class="h-8 w-auto" src={logoHeader.src} alt="Logo móvil" />
      </a>
      <button
        type="button"
        class="-m-2.5 rounded-md p-2.5 text-gray-700"
        aria-label="Cerrar menú"
        onclick="closeMenu()"
      >
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
    <div class="mt-6">
      <nav class="space-y-4">
        <a
          href="/"
          class="block text-gray-900 text-base font-semibold hover:bg-gray-50 px-3 py-2 rounded-lg"
          onclick="closeMenu()"
        >
          Home
        </a>
        <a
          href="/servicios"
          class="block text-gray-900 text-base font-semibold hover:bg-gray-50 px-3 py-2 rounded-lg"
          onclick="closeMenu()"
        >
          Servicios
        </a>
        <a
          href="/porqueeleguirnos"
          class="block text-gray-900 text-base font-semibold hover:bg-gray-50 px-3 py-2 rounded-lg"
          onclick="closeMenu()"
        >
          ¿Por qué elegirnos?
        </a>
        <a
          href="/contacto"
          class="block text-gray-900 text-base font-semibold hover:bg-gray-50 px-3 py-2 rounded-lg"
          onclick="closeMenu()"
        >
          ¿Por qué elegirnos?
        </a>
      </nav>
    </div>
  </div>
</header>
