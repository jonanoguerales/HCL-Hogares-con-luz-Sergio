<section class="isolate bg-white px-6 py-24 sm:py-32 lg:px-8">
  <!-- Fondo decorativo -->
  <div
    class="absolute inset-x-0 bottom-[-10rem] -z-10 transform-gpu overflow-hidden blur-3xl"
    aria-hidden="true"
  >
    <div
      class="relative left-1/2 -z-10 aspect-1155/678 w-[36.125rem] max-w-none -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-orange-400 to-orange-600 opacity-30 sm:left-[calc(50%-40rem)] sm:w-[72.1875rem]"
      style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"
    ></div>
  </div>

  <!-- Contenido -->
  <div class="mx-auto max-w-2xl text-center">
    <h2 class="text-4xl font-bold tracking-tight text-orange-600 sm:text-5xl">
      Contáctanos
    </h2>
    <p class="mt-4 text-lg text-gray-700">
      Cuéntanos sobre tu proyecto. Nuestro equipo de profesionales está listo
      para ayudarte a hacer realidad tus ideas.
    </p>
  </div>

  <!-- Formulario -->
  <form
    action="#"
    method="POST"
    class="mx-auto mt-16 max-w-xl sm:mt-20"
  >
    <div class="grid grid-cols-1 gap-x-8 gap-y-6 sm:grid-cols-2">
      <!-- Nombre -->
      <div>
        <label for="first-name" class="block text-sm font-semibold text-gray-900">
          Nombre
        </label>
        <div class="mt-2.5">
          <input
            type="text"
            name="first-name"
            id="first-name"
            autocomplete="given-name"
            class="block w-full rounded-md bg-white px-3.5 py-2 text-base text-gray-900 shadow-sm ring-1 ring-gray-300 placeholder-gray-400 focus:ring-2 focus:ring-orange-500 focus:outline-none"
          />
        </div>
      </div>

      <!-- Apellido -->
      <div>
        <label for="last-name" class="block text-sm font-semibold text-gray-900">
          Apellido
        </label>
        <div class="mt-2.5">
          <input
            type="text"
            name="last-name"
            id="last-name"
            autocomplete="family-name"
            class="block w-full rounded-md bg-white px-3.5 py-2 text-base text-gray-900 shadow-sm ring-1 ring-gray-300 placeholder-gray-400 focus:ring-2 focus:ring-orange-500 focus:outline-none"
          />
        </div>
      </div>

      <!-- Email -->
      <div class="sm:col-span-2">
        <label for="email" class="block text-sm font-semibold text-gray-900">
          Correo electrónico
        </label>
        <div class="mt-2.5">
          <input
            type="email"
            name="email"
            id="email"
            autocomplete="email"
            class="block w-full rounded-md bg-white px-3.5 py-2 text-base text-gray-900 shadow-sm ring-1 ring-gray-300 placeholder-gray-400 focus:ring-2 focus:ring-orange-500 focus:outline-none"
          />
        </div>
      </div>

      <!-- Teléfono -->
      <div class="sm:col-span-2">
        <label for="phone-number" class="block text-sm font-semibold text-gray-900">
          Teléfono
        </label>
        <div class="mt-2.5">
          <input
            type="text"
            name="phone-number"
            id="phone-number"
            class="block w-full rounded-md bg-white px-3.5 py-2 text-base text-gray-900 shadow-sm ring-1 ring-gray-300 placeholder-gray-400 focus:ring-2 focus:ring-orange-500 focus:outline-none"
          />
        </div>
      </div>

      <!-- Mensaje -->
      <div class="sm:col-span-2">
        <label for="message" class="block text-sm font-semibold text-gray-900">
          Mensaje
        </label>
        <div class="mt-2.5">
          <textarea
            name="message"
            id="message"
            rows="4"
            class="block w-full rounded-md bg-white px-3.5 py-2 text-base text-gray-900 shadow-sm ring-1 ring-gray-300 placeholder-gray-400 focus:ring-2 focus:ring-orange-500 focus:outline-none"
          ></textarea>
        </div>
      </div>
    </div>

    <!-- Botón Enviar -->
    <div class="mt-10">
      <button
        type="submit"
        class="block w-full rounded-md bg-orange-600 px-3.5 py-2.5 text-center text-sm font-semibold text-white shadow-sm hover:bg-orange-700 focus:ring-2 focus:ring-orange-500"
      >
        Enviar
      </button>
    </div>
  </form>
</section>
